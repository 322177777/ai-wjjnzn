.container {
  display: flex;
  flex-direction: column;
  height: 110vh;
}

.chat-area {
  flex: 1;
  margin: 20rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  overflow: auto;
}

.ai-message {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  text-align: left;
}

.user-message {
  display: block;
  font-size: 28rpx;
  margin-bottom: 10rpx;
  text-align: right;
}

.input-area {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 20rpx;
  background-color: #fff;
  box-shadow: 0 -6rpx 6rpx -6rpx rgba(0, 0, 0, 0.1);
}

input {
  flex: 1;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
  border: none;
  outline: none;
  background-color: transparent;
}

button {
  width: 120rpx;
  height: 60rpx;
  font-size: 30rpx;
  border-radius: 10rpx;
}
